            "fin",
            "flare",
            "bulb",
            "wing",
            "centerboard",
            "kanting",
            "lifting",
            "daggerboard"
          ]
        },
        "angle": {
          "$ref": "../definitions.json#/definitions/numberValue",
          "description": "A number indicating at which angle the keel currently is (in case of a canting keel), negative to port.",
