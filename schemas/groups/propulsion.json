{
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/schema",
  "id": "https://signalk.github.io/specification/schemas/groups/propulsion.json#",
  "title": "engine",
  "description": "An engine, named by a unique name within this vessel",
  "properties": {
    "engineType": {
      "type": "object",
      "description": "The type of engine",
      "properties": { 
        "value": {
          "type": "string",
          "enum": [
            "diesel inboard",
            "diesel outboard",
            "petrol inboard",
            "petrol outboard",
            "electric inboard",
            "electric outboard"
          ]
        },

        "source": {
          "description": "Source of this data",
          "$ref": "../definitions.json#/definitions/source"
        },

        "timestamp": {
          "description": "timestamp of the last update to this data",
          "$ref": "../definitions.json#/definitions/timestamp"
        }
      }
    },

    "state": {
      "type": "object",
      "description": "The current state of the engine",
      "properties": {
        "value": {
          "type": "string",
          "enum": [
            "stopped",
            "forward",
            "neutral",
            "reverse"
          ]
        },

        "source": {
          "description": "Source of this data",
          "$ref": "../definitions.json#/definitions/source"
        },

        "timestamp": {
          "description": "timestamp of the last update to this data",
          "$ref": "../definitions.json#/definitions/timestamp"
        }
      }
    },

    "rpm": {
      "description": "Engine rpm",
      "$ref": "../definitions.json#/definitions/numberValue",
      "units": "RPM"
    },

    "engineTemperature": {
      "description": "Engine temperature in degrees C",
      "$ref": "../definitions.json#/definitions/numberValue",
      "units": "C"
    },

    "oilTemperature": {
      "description": "Oil temperature in degrees C",
      "$ref": "../definitions.json#/definitions/numberValue",
      "units": "C"
    },

    "oilPressure": {
      "description": "Oil pressure in kPa",
      "$ref": "../definitions.json#/definitions/numberValue",
      "units": "kPa"
    },
    
    "turboPressure": {
      "description": "Turbo pressure in kPa",
      "$ref": "../definitions.json#/definitions/numberValue",
      "units": "kPa"
    },
    
    "fuelPressure": {
      "description": "Fuel pressure in kPa",
      "$ref": "../definitions.json#/definitions/numberValue",
      "units": "kPa"
    },

    "waterTemp": {
      "description": "Water temperature in degrees C",
      "$ref": "../definitions.json#/definitions/numberValue",
      "units": "C"
    },

    "exhaustTemp": {
      "description": "Exhaust temperature in degrees C",
      "$ref": "../definitions.json#/definitions/numberValue",
      "units": "C"
    },

    "fuelUsageRate": {
      "description": "Fuel usage in liters/hour",
      "$ref": "../definitions.json#/definitions/numberValue",
      "units": "l/h"
    },
    
    "alternatorVoltage": {
      "description": "Alternator output voltage in V",
      "$ref": "../definitions.json#/definitions/numberValue",
      "units": "V"
    }, 
    
    "engineHours": {
      "description": "Engine hours in sec",
      "$ref": "../definitions.json#/definitions/numberValue",
      "units": "sec"
    },
    
    "engineLoad": {
      "description": "Engine load in Percent",
      "$ref": "../definitions.json#/definitions/numberValue",
      "units": "ratio"
    },
    
    "engineTorque": {
      "description": "Engine torque in Percent",
      "$ref": "../definitions.json#/definitions/numberValue",
      "units": "ratio"
    }
  }
}
